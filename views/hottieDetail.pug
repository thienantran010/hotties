extends layout 

block content 
    - var src = "data:" + hottie.img.contentType + ";base64," + hottie.img.data.toString('base64')
    - var updateHref = "/hotties/" + hottie._id + "update"
    - var deleteAction = "/hotties/" + hottie._id + "delete"
    div.container
        div.row
            div.col-sm-4
                img(src=src, style= "max-width: 100%;")
            div.col-sm-2.vstack.gap-2
                h1 #{hottie.fullName}
                h2 From: #{hottie.from}
                p #{hottie.desc}
                div.row
                    div.col
                        a.btn.btn-primary.btn(href= hottie.url + "/update") Update
                    div.col
                        button.btn.btn-primary.btn(data-bs-toggle="modal", data-bs-target="#modal") Delete
                        div.modal.fade(id="modal")
                            div.modal-dialog
                                div.modal-content
                                    div.modal-header
                                        button.btn-close(type="button", data-bs-dismiss="modal", data-bs-target="#modal")
                                    div.modal-body Are you sure you want to delete this person?
                                    div.modal-footer
                                        button.btn.btn-light(type="button", data-bs-dismiss="modal", data-bs-target="#modal") No 
                                        form(method="POST", action= hottie.url + "/delete")
                                            button.btn.btn-danger(type="submit") Yes